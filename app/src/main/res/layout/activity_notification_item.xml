<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- First Notification Item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/profile_image1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/man_yellow"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/notification_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You received an interest"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/notification_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mary Thomas"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Second Notification Item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/profile_image2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/n1"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/notification_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sent a message"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/notification_time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="James Smith"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Third Notification Item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/profile_image3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/n2"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/notification_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your interest is accepted"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/notification_time3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mohit"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Fourth Notification Item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/profile_image4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/n3"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/notification_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You received an interest"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/notification_time4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="William Henry"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
